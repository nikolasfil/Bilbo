            <!-- libraries and locations -->
            <div class="d-flex flex-column justify-content-start mx-3">
                <h4>Library</h4>
                <p>Patras Library</p>
            </div>

            <div class="d-flex flex-column justify-content-start mx-3">
                <h4>Address</h4>
                <p>Manolaki 45, Patras, 26222</p>
            </div>

            <div class="d-flex flex-column justify-content-start mx-3">
                <h4>Copies</h4>
                <p>5</p>
            </div>

            <div class="d-flex flex-column justify-content-start mx-3">
                <!-- reservation buttons -->
                <h4><br></h4>
                <button type="button" class="btn btn-primary rounded-pill" data-bs-toggle="button" autocomplete="off">&nbsp;Reserve&nbsp;</button>
            </div>



        </div>
    </div>

</main>