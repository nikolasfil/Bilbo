            <div class="filters d-flex flex-column justify-content-start " id="library-filter">
                <input type="text" name="" id="library-filter-input" placeholder="Region or Library"
                    style="width: 70%;">
            </div>

        </div>


        <div class="d-flex flex-column justify-content-between" id="search-content">

            <div class="selected-filter-list d-flex flex-row justify-content-start " id="filter-selection">
