<div class="borrowingInfo">
    <div class="borrowedBookDetails">
        <img class="borrowedBookimg" src="img/card_book_1.png">
        <div>
        <h7>
            Name: {{title}} <br>
            ISBN: {{ISBN}} <br>
            Edition: {{edition}} <br>
        </h7>
        </div>
    </div>

    {{#if overdue}}
    <ul class="timeline">
        <li class="li overdue">
        <div class="timestamp">
            <span class="status1">Reserved<br>{{resDate}}</span>
        </div>
        </li>
        <li class="li overdue">
        <div class="timestamp">
            <span class="status2">Borrowed<br>{{borDate}}</span>
        </div>
        </li>
        <li class="li overdue">
        <div class="timestamp">
            <span class="status3">{{retStatus}}<br>{{retDate}}</span>
        </div>
        </li>
    </ul>
    {{else}}
    <ul class="timeline">
        <li class="li complete">
        <div class="timestamp">
            <span class="status1">Reserved<br>{{resDate}}</span>
        </div>
        </li>
        {{#if borDate}}
        <li class="li complete">
        <div class="timestamp">
            <span class="status2">Borrowed<br>{{borDate}}</span>
        </div>
        </li>
        {{else}}
        <li class="li">
        <div class="timestamp">
            <span class="status2">Borrowed<br>00/00/0000</span>
        </div>
        </li>
        {{/if}}
        {{if returned}}
        <li class="li complete">
        <div class="timestamp">
            <span class="status3">{{retStatus}}<br>{{retDate}}</span>
        </div>
        </li>
        {{else}}
        <li class="li">
        <div class="timestamp">
            <span class="status3">{{retStatus}}<br>{{retDate}}</span>
        </div>
        </li>
        {{/if}}
    </ul>
    {{/if}}

</div>