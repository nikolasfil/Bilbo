<timeline class="row align-items-center justify-content-center">
    <div class="col borrowedBookDetails">
        <img class="borrowedBookimg" src={{img}}>
        <div>
        <h7>
            <strong>Name: </strong>{{title}} <br>
            <strong>ISBN: </strong>{{ISBN}} <br>
            <strong>Edition: </strong>{{edition}} <br>
        </h7>
        </div>
    </div>

    {{#if overdue}}
    <ul class="col timeline scale">
        <li class="li overdue">
        <div class="timestamp">
            <span class="status1">Reserved<br>{{resDate}}</span>
        </div>
        </li>
        <li class="li overdue">
        <div class="timestamp">
            <span class="status2">Borrowed<br>{{borDate}}</span>
        </div>
        </li>
        <li class="li overdue">
        <div class="timestamp">
            <span class="status3">{{retStatus}}<br>{{retDate}}</span>
        </div>
        </li>
    </ul>
    {{else}}
    <ul class="col timeline scale">
        <li class="li complete">
        <div class="timestamp">
            <span class="status1">Reserved<br>{{resDate}}</span>
        </div>
        </li>
        {{#if borDate}}
        <li class="li complete">
        <div class="timestamp">
            <span class="status2">Borrowed<br>{{borDate}}</span>
        </div>
        </li>
        {{else}}
        <li class="li">
        <div class="timestamp">
            <span class="status2">Borrowed<br>00/00/0000</span>
        </div>
        </li>
        {{/if}}
        {{#if returned}}
        <li class="li complete">
        <div class="timestamp">
            <span class="status3 borrowed">{{retStatus}}<br>{{retDate}}</span>
        </div>
        </li>
        {{else}}
        {{#if retDate}}
        <li class="li">
        <div class="timestamp">
            <span class="status3 borrowed">{{retStatus}}<br>{{retDate}}</span>
        </div>
        </li>
        {{else}}
        <li class="li">
        <div class="timestamp">
            <span class="status3">Return<br>00/00/0000</span>
        </div>
        </li>
        {{/if}}
        {{/if}}
        
    </ul>
    {{/if}}

</timeline>