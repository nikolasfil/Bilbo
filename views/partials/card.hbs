<card>
    <div class="card-img-top" draggable="false">
        <a href={{location}} class="d-flex flex-column align-content-center">
            {{#if photo}}
            <img class="rounded-corners card-img-class" src={{photo}} alt="photo" draggable="false">
            {{else}}
            <img class="rounded-corners card-img-class" src="/img/card_book_1.png" alt="Photo Not Found"
                draggable="false">
            {{/if}}
            <div class = "p-3">
                <h4><strong>{{title}}</strong></h4>
                <p>{{description}}</p>
                {{#if copies}}
                <p>Available Copies: {{copies}}</p>
                {{/if}}
            </div>
        </a>
    </div>
</card>