    {{!-- onclick="window.location={{location}}" --}}
    <div class="card-img-top">
        <a href={{location}} class="d-flex flex-column align-content-center">
            <img class="rounded-corners card-img-class" src={{photo}} alt="photo">
            <div class = "p-3">
                <h4><strong>{{title}}</strong></h4>
                <p>{{description}}</p>
                {{#if copies}}
                <p>Available Copies: {{copies}}</p>
                {{/if}}
            </div>
        </a>
    </div>
