<card class="card-img-top card-space"> 
    <style>
        {
                {
                !-- change every element after a to have the default style --
            }
        }

        a {
            text-decoration: none;
            color: black;
        }

        a:hover {
            text-decoration: none;
            color: black;
        }
    </style>
    {{!-- onclick="window.location={{location}}" --}}
    <div class="card-div" draggable="false">
        <a href={{location}} class="d-flex flex-column align-content-center">
            {{#if photo}}
            <img class="rounded-corners card-img-class" src={{photo}} alt="photo" draggable="false">
            {{else}}
            <img class="rounded-corners card-img-class" src="/img/card_book_1.png" alt="Photo Not Found"
                draggable="false">
            {{/if}}
            <div class = "p-3">
                <h5  class="overflow-ellipsis"><strong>{{title}}</strong></h5>
                <p>{{description}}</p>
                {{#if copies}}
                <p>Available Copies: {{copies}}</p>
                {{/if}}
            </div>
        </a>
    </div>
</card>